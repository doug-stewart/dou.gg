{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Bundler",
    "isolatedModules": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "include": [
    "**/*.astro",
    "**/*.ts",
    "**/*.d.ts",
    "**/*.tsx",
    "eslint.config.js"
  ],
  "exclude": [
    "node_modules"
  ]
}