---
import NavLink from '../nav-link/NavLink.astro';
---

<style>
    .header {
        grid-area: header;
        margin-inline: calc(var(--spacing) * 2 * -1);
        position: sticky;
        top: var(--spacing);
        width: fit-content;
        z-index: var(--z-nav);

        &::after {
            background-color: var(--blue-4);
            border-radius: 3px;
            content: '';
            height: 6px;
            inset-block-start: calc(100% - 3px);
            inset-inline-start: calc(0% - 3px);
            mix-blend-mode: color-dodge;
            position: absolute;
            width: calc(100% + 6px);
            z-index: -1;
        }
    }

    .nav {
        background-color: var(--green-2);
        border-radius: 3px;
        padding-inline: var(--spacing);
        position: relative;
        z-index: 0;
    }

    .list {
        display: grid;
        grid-auto-flow: column;
        justify-content: end;
        list-style: none;
    }
</style>

<header class="header">
    <nav class="nav">
        <ul class="list">
            <li><NavLink href="/">Home</NavLink></li>
            <li><NavLink href="/blog">Blog</NavLink></li>
            <li><NavLink href="/contact">Contact</NavLink></li>
        </ul>
    </nav>
</header>
